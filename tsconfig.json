{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "removeComments": true,
    "strictNullChecks": true,
    "lib": [
      "es2015",
      "dom",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "files": ["index.ts"],
  "exclude": ["./**/*.spec.ts", "./schematics/**/files/**/*"],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableSummariesForJit": false
  }
}
